<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffc9c9cc" />
            <corners android:radius="@dimen/dimen_12" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#1ff0f0f2" />
            <corners android:radius="@dimen/dimen_12" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_activated="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>