<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/element_progress_corners_size" />
            <solid android:color="@color/element_primary_white_8" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="@color/element_primary_white_60" />
                <corners android:radius="@dimen/element_progress_corners_size" />
            </shape>
        </scale>
    </item>
</layer-list>